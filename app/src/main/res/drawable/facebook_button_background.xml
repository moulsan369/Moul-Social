<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/facebook_blue_dark"/> <!-- Darker blue when pressed -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/facebook_blue"/> <!-- Default blue -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
