<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E1E8ED"/> <!-- Light gray when pressed -->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Transparent by default -->
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>
