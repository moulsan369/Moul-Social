<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imageView_profile_picture_post"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_picture_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:background="@drawable/profile_picture_background"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView_name_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView_timestamp_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 mins ago"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post content goes here"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView_post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/post_image_placeholder"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:importantForAccessibility="no" />
</LinearLayout>
